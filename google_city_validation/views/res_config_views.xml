<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_sale_config_settings" model="ir.ui.view">
            <field name="name">crm settings</field>
            <field name="model">sale.config.settings</field>
            <field name="inherit_id" ref="crm.view_sale_config_settings"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='config_alias']" position="after">
                    <group string="City Validation" name="city_validation_settings">
                        <field name="city_validation_policy" class="oe_inline"/>
                    </group>
                </xpath>
            </field>
        </record>
</odoo>
